<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/character_container"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <ImageView
            android:id="@+id/character_item_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:src="@mipmap/dumb_icon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/character_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignBottom="@+id/character_item_iv"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:text="IdanNoam"
            android:textColor="#000000"
            android:textSize="13dp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/cover_x_charachter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/circle_x"
        android:visibility="invisible" />
</android.support.constraint.ConstraintLayout>
