<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.guesswho.idan.androidguesswho.Activities.EasyGameActivity">

    <include
        android:id="@+id/top_bar_game"
        layout="@layout/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/top_bar_game"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingEnd="40dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingStart="40dp"
        android:paddingTop="6dp"
        android:text="ashuuuuuuuuuuush" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar_game"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:id="@+id/game_cards_line_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <com.guesswho.idan.androidguesswho.CharacterCustomeView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@mipmap/dumb_icon" />

            <com.guesswho.idan.androidguesswho.CharacterCustomeView
