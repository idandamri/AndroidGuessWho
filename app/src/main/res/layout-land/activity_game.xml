                android:id="@+id/card_12"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@mipmap/dumb_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_cards_line_ll_3_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_cards_line_ll_2_row"
            android:orientation="horizontal"
            android:weightSum="6">


            <com.guesswho.idan.androidguesswho.CharacterCustomeView
                android:layout_width="0dp"
                android:id="@+id/card_13"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@mipmap/dumb_icon" />

            <com.guesswho.idan.androidguesswho.CharacterCustomeView
                android:id="@+id/card_14"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@mipmap/dumb_icon" />

            <com.guesswho.idan.androidguesswho.CharacterCustomeView
                android:layout_width="0dp"
